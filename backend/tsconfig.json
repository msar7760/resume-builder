{
  "compilerOptions": {
    "target": "ES2020",         // JS version to compile to
    "module": "CommonJS",       // Node.js compatible module system
    "outDir": "dist",           // <-- THIS is the output folder
    "rootDir": "src",           // <-- source folder
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]       // Compile all TS files in src
}

